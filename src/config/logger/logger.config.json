{
  "appenders": {
    "access": {
      "type": "file",
      "filename": "log/trace.log",
      "maxLogSize": 10485760,
      "category": "access",
      "layout": {
        "type": "pattern",
        "pattern": "[%d{yyyy/MM/dd hh.mm.ss.SSS}] [%p] [%X{ip}] [%X{method} %X{uri}] [%X{file} %X{line}:%X{column} %X{function}] %m"
      }
    },
    "console": {
      "type": "stdout",
      "layout": {
        "type": "pattern",
        "pattern": "[%d{yyyy/MM/dd hh.mm.ss.SSS}] [%p] [%X{ip}] [%X{method} %X{uri}] [%X{file} %X{line}:%X{column} %X{function}] %m"
      }
    }
  },
  "categories": {
    "default": {
      "appenders": ["access", "console"],
      "level": "INFO"
    }
  }
}
